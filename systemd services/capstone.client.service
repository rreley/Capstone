[Unit]
Description=Helen Client made for UALR Capstone Fall 2021
After=docker.service
Requires=docker.service

[Service]
Restart=always
ExecStartPre=/bin/bash \
-c '/usr/bin/docker rm -f capstone-client || /bin/true'
ExecStartPre=/usr/bin/docker pull acash1/capstone-client
ExecStart=/usr/bin/docker run --name capstone-client \
-p 5000:5000 -e "NODE_ENV=development" -e "PORT=5000" \
acash1/capstone-client
ExecStop=/usr/bin/docker rm -f capstone-client

[Install]
WantedBy=multi-user.target